<Application
	x:Class="ThermodynamicistUWP.App"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
	xmlns:ctrl="using:CommunityToolkit.WinUI.Controls"
	xmlns:animate="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals"
	xmlns:local="using:ThermodynamicistUWP"
	xmlns:converters="using:ThermodynamicistUWP.Converters">

	<Application.Resources>
		<ResourceDictionary>
			<!--#region Converters -->
			<ResourceDictionary.MergedDictionaries>
				<XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />

				<ResourceDictionary>
					<converters:ChemicalNamePairConverter x:Key="ChemicalNamePairConverter"/>
				</ResourceDictionary>
				<ResourceDictionary>
					<converters:ErrorSeverityConverter x:Key="ErrorSeverityConverter"/>
				</ResourceDictionary>

			</ResourceDictionary.MergedDictionaries>
			<!--#endregion-->
			
			<!--#region Button styles -->
			<Style x:Key="OutputOptionsButtonStyle" TargetType="local:OutputOptionsButton" BasedOn="{StaticResource DefaultButtonStyle}">
				<Setter Property="Background" Value="{StaticResource SystemAccentColor}"/>
				<Setter Property="Foreground" Value="{StaticResource TextFillColorPrimaryBrush}"/>
				<Setter Property="Margin" Value="0,5,0,0"/>
				<Setter Property="CornerRadius" Value="4,0,0,4"/>
				<Setter Property="Height" Value="33"/>
			</Style>
			<Style x:Key="OutputOptionsButtonWarningStyle" TargetType="local:OutputOptionsButton" BasedOn="{StaticResource OutputOptionsButtonStyle}">
				<Setter Property="Background" Value="{StaticResource SystemFillColorCautionBackgroundBrush}"/>
				<Setter Property="Foreground" Value="{StaticResource SystemFillColorCautionBrush}"/>
				<Setter Property="BorderBrush" Value="{StaticResource SystemFillColorCautionBrush}"/>
				<Setter Property="BorderThickness" Value="1"/>
			</Style>
			<!--#endregion-->
			
			<!--#region NumberBox styles-->
			<Style x:Key="NumberBoxWarningStyle" TargetType="muxc:NumberBox">
				<Setter Property="BorderBrush" Value="{StaticResource SystemFillColorCautionBrush}"/>
				<Setter Property="BorderThickness" Value="1"/>
			</Style>
			<Style x:Key="NumberBoxErrorStyle" TargetType="muxc:NumberBox">
				<Setter Property="BorderBrush" Value="{StaticResource SystemFillColorErrorBrush}"/>
				<Setter Property="BorderThickness" Value="1"/>
			</Style>
			<!--#endregion-->

			<!--#region Splitter styles -->
			<Style x:Key="MajorHorizontalRectangleStyle" TargetType="Rectangle">
				<Setter Property="Height" Value="2"/>
				<Setter Property="Fill" Value="Gray"/>
				<Setter Property="VerticalAlignment" Value="Top"/>
				<Setter Property="RenderTransform">
					<Setter.Value>
						<TranslateTransform Y="-1"/>
					</Setter.Value>
				</Setter>
			</Style>
			<Style x:Key="MajorHorizontalSplitterStyle" TargetType="ctrl:GridSplitter">
				<Setter Property="Height" Value="16"/>
				<Setter Property="Foreground" Value="White"/>
				<Setter Property="VerticalAlignment" Value="Top"/>
				<Setter Property="ResizeBehavior" Value="BasedOnAlignment"/>
				<Setter Property="ResizeDirection" Value="Auto"/>
				<Setter Property="RenderTransform">
					<Setter.Value>
						<TranslateTransform Y="-8"/>
					</Setter.Value>
				</Setter>
			</Style>
			<!--#endregion-->
			
			<!--#region Text styles-->
			<Style x:Key="WarningCaptionTextBlockStyle" TargetType="TextBlock" BasedOn="{StaticResource CaptionTextBlockStyle}">
				<Setter Property="Visibility" Value="Collapsed"/>
				<Setter Property="Foreground" Value="{ThemeResource TextFillColorSecondaryBrush}"/>
			</Style>
			<!--#endregion-->
			
			<!--#region InfoBadge styles -->
			<Style x:Key="ControlWarningInfoBadgeStyle" TargetType="muxc:InfoBadge" BasedOn="{StaticResource CautionIconInfoBadgeStyle}">
				<Setter Property="Width" Value="15"/>
				<Setter Property="Height" Value="15"/>
				<Setter Property="Visibility" Value="Collapsed"/>
				<Setter Property="HorizontalAlignment" Value="Right"/>
				<Setter Property="VerticalAlignment" Value="Top"/>
				<Setter Property="RenderTransform">
					<Setter.Value>
						<TranslateTransform X="7" Y="-7"/>
					</Setter.Value>
				</Setter>
			</Style>
			<Style x:Key="ControlErrorInfoBadgeStyle" TargetType="muxc:InfoBadge" BasedOn="{StaticResource CriticalIconInfoBadgeStyle}">
				<Setter Property="Visibility" Value="Collapsed"/>
				<Setter Property="HorizontalAlignment" Value="Right"/>
				<Setter Property="VerticalAlignment" Value="Top"/>
				<Setter Property="RenderTransform">
					<Setter.Value>
						<TranslateTransform X="7" Y="-7"/>
					</Setter.Value>
				</Setter>
			</Style>
			<!--#endregion-->
		</ResourceDictionary>
	</Application.Resources>

</Application>
