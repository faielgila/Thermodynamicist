	<StackPanel>
		<TextBlock Text="{x:Bind Header}" Padding="0,0,0,5"/>
		<Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
			<muxc:NumberBox x:Name="NumBox"
							PlaceholderText="{x:Bind PlaceholderText}"
							Width="150" MaxHeight="60"
							AcceptsExpression="{x:Bind AcceptsExpression}"
							Value="{x:Bind Value, Mode=TwoWay}"
							Style="{ThemeResource NumberBoxDefaultStyle}"/>

			<muxc:InfoBadge x:Name="InfoBadgeNumBox" Style="{StaticResource ControlErrorInfoBadgeStyle}"/>
		</Grid>
	</StackPanel>

</UserControl>
