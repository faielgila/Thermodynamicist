<Page
	x:Class="ThermodynamicistUWP.PageBinarySys"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:ctk="using:CommunityToolkit.WinUI"
	xmlns:ctrl="using:CommunityToolkit.WinUI.Controls"
	xmlns:animate="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals"
	xmlns:local="using:ThermodynamicistUWP"
	xmlns:core="using:Core"
	xmlns:eos="using:Core.EquationsOfState"
	xmlns:vm="using:Core.ViewModels"
	xmlns:am="using:Core.Multicomponent.ActivityModels"
	xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
	xmlns:ui="using:CommunityToolkit.WinUI"
	xmlns:oxy="using:OxyPlot.Windows"
	
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
	NavigationCacheMode="Required">

	<Page.Resources>
		<DataTemplate x:Key="SpeciesResultsTemplate" x:Name="SpeciesResultsTemplate" x:DataType="local:SpeciesOutputData">
			<StackPanel>
				<TextBlock x:Name="SpeciesLabel" Text="{x:Bind chemical, Converter={StaticResource ChemicalNamePairConverter}}" Style="{StaticResource BodyStrongTextBlockStyle}"/>
				<TextBlock Padding="5, 0, 0, 0"  x:Name="ResultsLabel" Text="{x:Bind outputData}" />
			</StackPanel>
		</DataTemplate>
		<DataTemplate x:Key="ListOutputSelectionTemplate" x:DataType="vm:OutputItem">
			<ListViewItem AutomationProperties.Name="{x:Bind DisplayName}">
				<StackPanel Orientation="Horizontal">
					<FontIcon Width="20" Glyph="{x:Bind Glyph}"/>
					<TextBlock Text="{x:Bind DisplayName}" Margin="5"/>
				</StackPanel>
			</ListViewItem>
		</DataTemplate>

		<DataTemplate x:Key="ErrorInfoBarTemplate" x:DataType="vm:ErrorInfoViewModel">
			<muxc:InfoBar
				Severity="{x:Bind Severity, Mode=OneWay, Converter={StaticResource ErrorSeverityConverter}}"
				Message="{x:Bind Message}" IsOpen="True" IsClosable="False"/>
		</DataTemplate>
	</Page.Resources>

	<Grid Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<StackPanel Padding="0,0,5,5" Orientation="Horizontal">
			<Border Width="50" VerticalAlignment="Top" Padding="0,8,8,0">
				<muxc:ImageIcon Source="/Assets/TypeIcons/MultiphaseSystem@3x.png"/>
			</Border>
			<StackPanel Orientation="Vertical">
				<TextBlock Text="Binary two-phase system" Style="{StaticResource TitleTextBlockStyle}"/>
				<TextBlock Text="Models a system of two homogeneous phases with two chemical species." Style="{StaticResource BodyTextBlockStyle}"/>
			</StackPanel>
		</StackPanel>

		<Grid Grid.Row="1" CornerRadius="8" BorderBrush="Gray" BorderThickness="2">
			<Grid.RowDefinitions>
				<RowDefinition Height="350" MinHeight="350"/>
				<RowDefinition Height="*"/>
			</Grid.RowDefinitions>

			<!--Inputs panel-->
			<Grid Grid.Row="0">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="300" MinWidth="250"/>
					<ColumnDefinition Width="*" MinWidth="400"/>
				</Grid.ColumnDefinitions>

				<!--Model-wide inputs panel-->
				<StackPanel Orientation="Vertical" Grid.Column="0" Padding="10" VerticalAlignment="Top">
					<TextBlock Style="{StaticResource SubtitleTextBlockStyle}" Text="Model-wide inputs"/>
					<local:ValidatedNumberBox x:Name="NumBoxT" Header="Temperature:" Margin="0,5,0,0"
											  PlaceholderText="[K]" AcceptsExpression="True" CanBeZero="False"
											  HorizontalAlignment="Left"
											  Value="{x:Bind ViewModel.T, Mode=TwoWay}"
											  ValueChanged="NumBox_ValueChanged"/>
					<local:ValidatedNumberBox x:Name="NumBoxP" Header="Pressure:" Margin="0,10,0,0"
											  PlaceholderText="[Pa]" AcceptsExpression="True" CanBeZero="False"
											  HorizontalAlignment="Left"
											  Value="{x:Bind ViewModel.P, Mode=TwoWay}"
											  ValueChanged="NumBox_ValueChanged"/>

					<!--Calculation settings & run-->
					<Grid Margin="0,10">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="44"/>
							<ColumnDefinition Width="Auto"/>
						</Grid.ColumnDefinitions>

						<Button Style="{StaticResource ButtonRunCalculationStyle}" Grid.Column="1" Click="RunCalc">
							<StackPanel Orientation="Horizontal">
								<SymbolIcon Symbol="Play" Margin="0,0,5,0"/>
								<TextBlock Text="Run calculation"/>
							</StackPanel>
						</Button>

						<local:OutputOptionsButton x:Name="ButtonSelectOutputItems" Click="ButtonSelectOutputItems_Click"
												   AllOutputOptions="{x:Bind AllOutputOptions}"/>
					</Grid>
				</StackPanel>

				<!--inputs divider-->
				<Rectangle Fill="{StaticResource ButtonPointerOverBackgroundThemeBrush}"
					   Width="2" Grid.Column="1" HorizontalAlignment="Left">
					<Rectangle.RenderTransform>
						<TranslateTransform X="-1"/>
					</Rectangle.RenderTransform>
				</Rectangle>
				<ctrl:GridSplitter Width="16" Grid.Column="1" HorizontalAlignment="Left" ResizeBehavior="BasedOnAlignment" ResizeDirection="Auto">
					<ctrl:GridSplitter.RenderTransform>
						<TranslateTransform X="-8"/>
					</ctrl:GridSplitter.RenderTransform>
				</ctrl:GridSplitter>

				<!--Mixture inputs panel-->
				<Grid Grid.Column="1" Padding="15,10">
					<Grid.RowDefinitions>
						<RowDefinition Height="Auto"/>
						<RowDefinition/>
					</Grid.RowDefinitions>

					<TextBlock Style="{StaticResource SubtitleTextBlockStyle}" Text="Mixture definition" Margin="0,0,0,5"/>

					<!--Species inputs-->
					<ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
								  Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Padding="0,0,15,15">
						<Grid>
							<Grid.RowDefinitions>
								<RowDefinition/>
								<RowDefinition/>
								<RowDefinition/>
								<RowDefinition/>
							</Grid.RowDefinitions>
							<Grid.ColumnDefinitions>
								<ColumnDefinition/>
								<ColumnDefinition/>
								<ColumnDefinition/>
								<ColumnDefinition/>
								<ColumnDefinition/>
							</Grid.ColumnDefinitions>

							<!--Chemicals-->
							<StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,15,10">
								<TextBlock Text="Chemical:" Margin="0,0,0,5"/>
								<Grid>
									<ComboBox x:Name="DropdownSpecies1" PlaceholderText="Pick a species"
											  SelectedValue="{x:Bind ViewModel.Species1, Mode=TwoWay, Converter={StaticResource ChemicalNamePairConverter}}"
											  ItemsSource="{x:Bind core:Constants.GetChemicalNames()}"
											  SelectionChanged="Dropdown_SelectionChanged"
											  VerticalAlignment="Top" HorizontalAlignment="Left" Width="200">
										<ComboBox.ItemTemplate>
											<DataTemplate x:DataType="core:ChemicalNamePair">
												<TextBlock Text="{x:Bind Name}"/>
											</DataTemplate>
										</ComboBox.ItemTemplate>
									</ComboBox>
									<muxc:InfoBadge x:Name="InfoBadgeDropdownSpecies1" Style="{StaticResource ControlErrorInfoBadgeStyle}"/>
								</Grid>
							</StackPanel>
							<StackPanel Grid.Row="3" Grid.Column="0" Margin="0,0,0,10">
								<TextBlock Text="Chemical:" Margin="0,0,0,5"/>
								<Grid>
									<ComboBox x:Name="DropdownSpecies2" PlaceholderText="Pick a species"
											  SelectedValue="{x:Bind ViewModel.Species2, Mode=TwoWay, Converter={StaticResource ChemicalNamePairConverter}}"
											  ItemsSource="{x:Bind core:Constants.GetChemicalNames()}"
											  SelectionChanged="Dropdown_SelectionChanged"
											  VerticalAlignment="Top" HorizontalAlignment="Left" Width="200">
										<ComboBox.ItemTemplate>
											<DataTemplate x:DataType="core:ChemicalNamePair">
												<TextBlock Text="{x:Bind Name}"/>
											</DataTemplate>
										</ComboBox.ItemTemplate>
									</ComboBox>
									<muxc:InfoBadge x:Name="InfoBadgeDropdownSpecies2" Style="{StaticResource ControlErrorInfoBadgeStyle}"/>
								</Grid>
							</StackPanel>

							<!--Phase 1-->
							<StackPanel Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Margin="0,0,20,10" HorizontalAlignment="Left">
								<TextBlock Text="Phase:" Margin="0,0,0,5"/>
								<Grid>
									<ComboBox x:Name="DropdownPhase1" PlaceholderText="Pick a phase"
											  ItemsSource="{x:Bind ViewModel.AvailablePhases, Mode=OneWay}"
											  SelectedValue="{x:Bind ViewModel.Phase1, Mode=TwoWay}"
											  SelectionChanged="Dropdown_SelectionChanged"
											  VerticalAlignment="Top" Width="150"/>
									<muxc:InfoBadge x:Name="InfoBadgeDropdownPhase1" Style="{StaticResource ControlErrorInfoBadgeStyle}"/>
								</Grid>
							</StackPanel>
							<StackPanel Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Margin="0,0,20,15" HorizontalAlignment="Left">
								<TextBlock Text="Activity model:" Margin="0,0,0,5"/>
								<Grid>
									<ComboBox x:Name="DropdownModelPhase1" PlaceholderText="Pick an activity model"
											  ItemsSource="{x:Bind ViewModel.AvailableActivityModels}"
											  SelectedValue="{x:Bind ViewModel.ActivityModelFactoryPhase1, Mode=TwoWay}"
											  SelectionChanged="Dropdown_SelectionChanged"
											  Width="215">
										<ComboBox.ItemTemplate>
											<DataTemplate x:DataType="am:IActivityModelFactory">
												<TextBlock Text="{x:Bind Name}"/>
											</DataTemplate>
										</ComboBox.ItemTemplate>
									</ComboBox>
									<muxc:InfoBadge x:Name="InfoBadgeDropdownModelPhase1" Style="{StaticResource ControlErrorInfoBadgeStyle}"
											Visibility="Collapsed"/>
								</Grid>
							</StackPanel>

							<!--Phase 2-->
							<StackPanel Grid.Row="0" Grid.Column="3" Grid.ColumnSpan="2" Margin="0,0,20,10" HorizontalAlignment="Left">
								<TextBlock Text="Phase:" Margin="0,0,0,5"/>
								<Grid>
									<ComboBox x:Name="DropdownPhase2" PlaceholderText="Pick a phase"
											  ItemsSource="{x:Bind ViewModel.AvailablePhases, Mode=OneWay}"
											  SelectedValue="{x:Bind ViewModel.Phase2, Mode=TwoWay}"
											  SelectionChanged="Dropdown_SelectionChanged"
											  VerticalAlignment="Top" Width="150"/>
									<muxc:InfoBadge x:Name="InfoBadgeDropdownPhase2" Style="{StaticResource ControlErrorInfoBadgeStyle}"/>
								</Grid>
							</StackPanel>
							<StackPanel Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="2" Margin="0,0,20,15" HorizontalAlignment="Left">
								<TextBlock Text="Activity model:" Margin="0,0,0,5"/>
								<Grid>
									<ComboBox x:Name="DropdownModelPhase2" PlaceholderText="Pick an activity model"
											  ItemsSource="{x:Bind ViewModel.AvailableActivityModels}"
											  SelectedValue="{x:Bind ViewModel.ActivityModelFactoryPhase2, Mode=TwoWay}"
											  SelectionChanged="Dropdown_SelectionChanged"
											  Width="215">
										<ComboBox.ItemTemplate>
											<DataTemplate x:DataType="am:IActivityModelFactory">
												<TextBlock Text="{x:Bind Name}"/>
											</DataTemplate>
										</ComboBox.ItemTemplate>
									</ComboBox>
									<muxc:InfoBadge x:Name="InfoBadgeDropdownModelPhase2" Style="{StaticResource ControlErrorInfoBadgeStyle}"
											Visibility="Collapsed"/>
								</Grid>
							</StackPanel>
							
							<!--Borders-->
							<Border Grid.Row="2" Grid.Column="1" Grid.RowSpan="2" Grid.ColumnSpan="2"
									Margin="-10,-10,10,0"
									CornerRadius="{StaticResource OverlayCornerRadius}"
									BorderThickness="1" BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}"
									Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}"/>
							<Border Grid.Row="2" Grid.Column="3" Grid.RowSpan="2" Grid.ColumnSpan="2"
									Margin="-10,-10,10,0"
									CornerRadius="{StaticResource OverlayCornerRadius}"
									BorderThickness="1" BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}"
									Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}"/>
							
							<!--species p1s1-->
							<local:ValidatedNumberBox x:Name="NumBoxMoleFractionPhase1Species1" Header="Mole fraction in phase:"
													  Margin="0,0,10,0" Grid.Row="2" Grid.Column="1"
													  PlaceholderText="[mol%]" AcceptsExpression="True" CanBeZero="False"
													  HorizontalAlignment="Left"
													  Value="{x:Bind ViewModel.MoleFraction_p1s1, Mode=TwoWay}"
													  ValueChanged="NumBox_ValueChanged"/>
							<StackPanel Grid.Row="2" Grid.Column="2" Margin="0,0,20,10">
								<TextBlock Text="Equation of state:" Margin="0,0,0,5"/>
								<Grid>
									<ComboBox x:Name="DropdownEoSPhase1Species1" PlaceholderText="Equation of state"
											  ItemsSource="{x:Bind ViewModel.AvailableEoS}"
											  SelectedValue="{x:Bind ViewModel.EoSFactory_p1s1, Mode=TwoWay}"
											  SelectionChanged="Dropdown_SelectionChanged"
											  Width="200" VerticalAlignment="Top" HorizontalAlignment="Stretch">
										<ComboBox.ItemTemplate>
											<DataTemplate x:DataType="eos:IEquationOfStateFactory">
												<TextBlock Text="{x:Bind Name}"/>
											</DataTemplate>
										</ComboBox.ItemTemplate>
									</ComboBox>
									<muxc:InfoBadge x:Name="InfoBadgeDropdownEoSPhase1Species1" Style="{StaticResource ControlErrorInfoBadgeStyle}"/>
								</Grid>
							</StackPanel>

							<!--species p1s2-->
							<local:ValidatedNumberBox x:Name="NumBoxMoleFractionPhase1Species2" Header="Mole fraction in phase:"
													  Margin="0,0,10,0" Grid.Row="3" Grid.Column="1"
													  PlaceholderText="[mol%]" AcceptsExpression="True" CanBeZero="False"
													  HorizontalAlignment="Left"
													  Value="{x:Bind ViewModel.MoleFraction_p1s2, Mode=TwoWay}"
													  ValueChanged="NumBox_ValueChanged"/>
							<StackPanel Grid.Row="3" Grid.Column="2" Margin="0,0,20,10">
								<TextBlock Text="Equation of state:" Margin="0,0,0,5"/>
								<Grid>
									<ComboBox x:Name="DropdownEoSPhase1Species2" PlaceholderText="Equation of state"
											  ItemsSource="{x:Bind ViewModel.AvailableEoS}"
											  SelectedValue="{x:Bind ViewModel.EoSFactory_p1s2, Mode=TwoWay}"
											  SelectionChanged="Dropdown_SelectionChanged"
											  Width="200" VerticalAlignment="Top" HorizontalAlignment="Stretch">
										<ComboBox.ItemTemplate>
											<DataTemplate x:DataType="eos:IEquationOfStateFactory">
												<TextBlock Text="{x:Bind Name}"/>
											</DataTemplate>
										</ComboBox.ItemTemplate>
									</ComboBox>
									<muxc:InfoBadge x:Name="InfoBadgeDropdownEoSPhase1Species2" Style="{StaticResource ControlErrorInfoBadgeStyle}"/>
								</Grid>
							</StackPanel>

							<!--species p2s1-->
							<local:ValidatedNumberBox x:Name="NumBoxMoleFractionPhase2Species1" Header="Mole fraction in phase:"
													  Margin="0,0,10,0" Grid.Row="2" Grid.Column="3"
													  PlaceholderText="[mol%]" AcceptsExpression="True" CanBeZero="False"
													  HorizontalAlignment="Left"
													  Value="{x:Bind ViewModel.MoleFraction_p2s1, Mode=TwoWay}"
													  ValueChanged="NumBox_ValueChanged"/>
							<StackPanel Grid.Row="2" Grid.Column="4" Margin="0,0,20,10">
								<TextBlock Text="Equation of state:" Margin="0,0,0,5"/>
								<Grid>
									<ComboBox x:Name="DropdownEoSPhase2Species1" PlaceholderText="Equation of state"
											  ItemsSource="{x:Bind ViewModel.AvailableEoS}"
											  SelectedValue="{x:Bind ViewModel.EoSFactory_p2s1, Mode=TwoWay}"
											  SelectionChanged="Dropdown_SelectionChanged"
											  Width="200" VerticalAlignment="Top" HorizontalAlignment="Stretch">
										<ComboBox.ItemTemplate>
											<DataTemplate x:DataType="eos:IEquationOfStateFactory">
												<TextBlock Text="{x:Bind Name}"/>
											</DataTemplate>
										</ComboBox.ItemTemplate>
									</ComboBox>
									<muxc:InfoBadge x:Name="InfoBadgeDropdownEoSPhase2Species1" Style="{StaticResource ControlErrorInfoBadgeStyle}"/>
								</Grid>
							</StackPanel>

							<!--species p2s2-->
							<local:ValidatedNumberBox x:Name="NumBoxMoleFractionPhase2Species2" Header="Mole fraction in phase:"
													  Margin="0,0,10,0" Grid.Row="3" Grid.Column="3"
													  PlaceholderText="[mol%]" AcceptsExpression="True" CanBeZero="False"
													  HorizontalAlignment="Left"
													  Value="{x:Bind ViewModel.MoleFraction_p2s2, Mode=TwoWay}"
													  ValueChanged="NumBox_ValueChanged"/>
							<StackPanel Grid.Row="3" Grid.Column="4" Margin="0,0,20,10">
								<TextBlock Text="Equation of state:" Margin="0,0,0,5"/>
								<Grid>
									<ComboBox x:Name="DropdownEoSPhase2Species2" PlaceholderText="Equation of state"
											  ItemsSource="{x:Bind ViewModel.AvailableEoS}"
											  SelectedValue="{x:Bind ViewModel.EoSFactory_p2s2, Mode=TwoWay}"
											  SelectionChanged="Dropdown_SelectionChanged"
											  Width="200" VerticalAlignment="Top" HorizontalAlignment="Stretch">
										<ComboBox.ItemTemplate>
											<DataTemplate x:DataType="eos:IEquationOfStateFactory">
												<TextBlock Text="{x:Bind Name}"/>
											</DataTemplate>
										</ComboBox.ItemTemplate>
									</ComboBox>
									<muxc:InfoBadge x:Name="InfoBadgeDropdownEoSPhase2Species2" Style="{StaticResource ControlErrorInfoBadgeStyle}"/>
								</Grid>
							</StackPanel>
						</Grid>

					</ScrollViewer>
				</Grid>
			</Grid>

			<!--page divider-->
			<Rectangle Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource MajorHorizontalRectangleStyle}"/>
			<ctrl:GridSplitter Grid.Row="1"	Style="{StaticResource MajorHorizontalSplitterStyle}"/>

			<!--Outputs panel-->
			<Grid Grid.Row="2">
				<!--<Grid.ColumnDefinitions>
					<ColumnDefinition Width="375" MinWidth="375"/>
					<ColumnDefinition Width="*" MinWidth="500"/>
				</Grid.ColumnDefinitions>-->

				<!--Numeric outputs panel-->
				<StackPanel Grid.Row="0" Padding="10" x:Name="StackNumOutputs">
					<TextBlock Style="{StaticResource SubtitleTextBlockStyle}" Text="Numeric outputs" Margin="0,0,0,5"/>

					<!--Model-wide outputs-->
					<TextBlock x:Name="TextNoOutputDataLabel" Text="There is no numeric output data to display here.&#x0a;Select one for output and run the calculation to add one."
							   Visibility="Visible" Style="{ThemeResource WarningCaptionTextBlockStyle}"/>
					<TextBlock x:Name="DataLabel" Margin="0,0,0,5"/>

					<!--Species outputs-->
					<ScrollViewer Visibility="Visible"
								  HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Padding="0,0,0,15">
						<muxc:ItemsRepeater x:Name="ItemsRepeaterEquilibriumResults" ItemsSource="{x:Bind EquilibriumOutputList}">
							<muxc:ItemsRepeater.ItemTemplate>
								<DataTemplate x:DataType="local:EquilibriumOutputData">
									<Grid HorizontalAlignment="Left" Visibility="Visible">
										<Grid.ColumnDefinitions>
											<ColumnDefinition Width="Auto"/>
											<ColumnDefinition Width="Auto"/>
											<ColumnDefinition Width="Auto"/>
										</Grid.ColumnDefinitions>
										<Grid.RowDefinitions>
											<RowDefinition Height="Auto"/>
											<RowDefinition Height="Auto"/>
											<RowDefinition Height="Auto"/>
										</Grid.RowDefinitions>

										<TextBlock Text="{x:Bind phase1}" Grid.Row="0" Grid.Column="1"
												   Margin="5" Style="{StaticResource BodyStrongTextBlockStyle}"/>
										<TextBlock Text="{x:Bind phase2}" Grid.Row="0" Grid.Column="2"
												   Margin="5" Style="{StaticResource BodyStrongTextBlockStyle}"/>
										<TextBlock Text="{x:Bind chemical1}" Grid.Row="1" Grid.Column="0"
												   Margin="5" Style="{StaticResource BodyStrongTextBlockStyle}"/>
										<TextBlock Text="{x:Bind chemical2}" Grid.Row="2" Grid.Column="0"
												   Margin="5" Style="{StaticResource BodyStrongTextBlockStyle}"/>

										<TextBlock x:Name="DataLabel_p1s1" Text="{x:Bind outputData_p1s1}"
												   Margin="5" Grid.Row="1" Grid.Column="1"/>
										<TextBlock x:Name="DataLabel_p1s2" Text="{x:Bind outputData_p1s2}"
												   Margin="5" Grid.Row="2" Grid.Column="1"/>
										<TextBlock x:Name="DataLabel_p2s1" Text="{x:Bind outputData_p2s1}"
												   Margin="5" Grid.Row="1" Grid.Column="2"/>
										<TextBlock x:Name="DataLabel_p2s2" Text="{x:Bind outputData_p2s2}"
												   Margin="5" Grid.Row="2" Grid.Column="2"/>
									</Grid>
								</DataTemplate>
							</muxc:ItemsRepeater.ItemTemplate>
							<muxc:ItemsRepeater.Layout>
								<muxc:StackLayout Orientation="Vertical" Spacing="10"/>
							</muxc:ItemsRepeater.Layout>
						</muxc:ItemsRepeater>
					</ScrollViewer>
				</StackPanel>

				<!--outputs divider-->
				<!--<Rectangle Fill="{StaticResource ButtonPointerOverBackgroundThemeBrush}"
					   Width="2" Grid.Column="1" HorizontalAlignment="Left">
					<Rectangle.RenderTransform>
						<TranslateTransform X="-1"/>
					</Rectangle.RenderTransform>
				</Rectangle>
				<ctrl:GridSplitter Width="16" Grid.Column="1" HorizontalAlignment="Left" ResizeBehavior="BasedOnAlignment" ResizeDirection="Auto">
					<ctrl:GridSplitter.RenderTransform>
						<TranslateTransform X="-8"/>
					</ctrl:GridSplitter.RenderTransform>
				</ctrl:GridSplitter>-->

				<!--Visual outputs panel-->
				<!--<Grid Grid.Column="1" Margin="15,10">
					<Grid.RowDefinitions>
						<RowDefinition Height="Auto"/>
						<RowDefinition Height="*"/>
					</Grid.RowDefinitions>

					<TextBlock Grid.Row="0" Style="{StaticResource SubtitleTextBlockStyle}" Text="Visual outputs" Margin="0,0,0,5"/>
					<oxy:PlotView x:Name="PlotViewKin" Grid.Row="1" Background="Transparent" Visibility="Visible"/>
					<TextBlock x:Name="TextNoPlots" Grid.Row="1" VerticalAlignment="Top" Style="{StaticResource CaptionTextBlockStyle}"
							   Text="There is no visual output data to display here.&#x0a;Select a plot for output and run the calculation to add one."
							   Visibility="Visible" Foreground="LightGray"/>
				</Grid>-->
			</Grid>

			<!--Error panel-->
			<StackPanel Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Stretch">
				<muxc:ItemsRepeater ItemsSource="{x:Bind ViewModel.Errors}" ItemTemplate="{StaticResource ErrorInfoBarTemplate}"/>
			</StackPanel>

		</Grid>
	</Grid>
	
</Page>
