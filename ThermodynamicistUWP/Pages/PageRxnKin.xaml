<Page
	x:Class="ThermodynamicistUWP.PageRxnKin"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:ctk="using:CommunityToolkit.WinUI"
	xmlns:ctrl="using:CommunityToolkit.WinUI.Controls"
	xmlns:animate="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals"
	xmlns:local="using:ThermodynamicistUWP"
	xmlns:vm="using:Core.ViewModels"
	xmlns:rl="using:Core.Reactions.Kinetics"
	xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
	xmlns:ui="using:CommunityToolkit.WinUI"
	xmlns:oxy="using:OxyPlot.Windows"
	
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
	NavigationCacheMode="Required">

	<Page.Resources>
		<DataTemplate x:Key="ListOutputSelectionTemplate" x:DataType="vm:OutputItem">
			<ListViewItem AutomationProperties.Name="{x:Bind DisplayName}">
				<StackPanel Orientation="Horizontal">
					<FontIcon Width="20" Glyph="{x:Bind Glyph}"/>
					<TextBlock Text="{x:Bind DisplayName}" Margin="5"/>
				</StackPanel>
			</ListViewItem>
		</DataTemplate>

		<DataTemplate x:Key="ErrorInfoBarTemplate" x:DataType="vm:ErrorInfoViewModel">
			<muxc:InfoBar
				Severity="{x:Bind Severity, Mode=OneWay, Converter={StaticResource ErrorSeverityConverter}}"
				Message="{x:Bind Message}" IsOpen="True" IsClosable="False"/>
		</DataTemplate>
	</Page.Resources>

	<Grid Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<StackPanel Padding="0,0,5,5" Orientation="Horizontal">
			<Border Width="50" VerticalAlignment="Top" Padding="0,8,0,0">
				<FontIcon Glyph="&#xF196;" FontSize="40"/>
			</Border>
			<StackPanel Orientation="Vertical">
				<TextBlock Text="Reaction kinetics" Style="{StaticResource TitleTextBlockStyle}"/>
				<TextBlock Text="Models a single simple chemical reaction." Style="{StaticResource BodyTextBlockStyle}"/>
			</StackPanel>
		</StackPanel>

		<Grid Grid.Row="1" CornerRadius="8" BorderBrush="Gray" BorderThickness="2">
			<Grid.RowDefinitions>
				<RowDefinition Height="400" MinHeight="400"/>
				<RowDefinition Height="*"/>
			</Grid.RowDefinitions>

			<!--Inputs panel-->
			<Grid Grid.Row="0">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="375" MinWidth="250"/>
					<ColumnDefinition Width="*" MinWidth="400"/>
				</Grid.ColumnDefinitions>

				<!--Model-wide inputs panel-->
				<StackPanel Orientation="Vertical" Grid.Column="0" Padding="10" VerticalAlignment="Top" Spacing="10">
					<TextBlock Style="{StaticResource SubtitleTextBlockStyle}" Text="Model-wide inputs" Margin="0,0,0,5"/>
					<local:ValidatedNumberBox x:Name="NumBoxT" Header="Temperature:"
											  PlaceholderText="[K]" AcceptsExpression="True" CanBeZero="False"
											  HorizontalAlignment="Left"
											  Value="{x:Bind ViewModel.T, Mode=TwoWay}"
											  ValueChanged="NumBox_ValueChanged"/>
					<local:ValidatedNumberBox x:Name="NumBoxP" Header="Pressure:"
											  PlaceholderText="[Pa]" AcceptsExpression="True" CanBeZero="False"
											  HorizontalAlignment="Left"
											  Value="{x:Bind ViewModel.P, Mode=TwoWay}"
											  ValueChanged="NumBox_ValueChanged"/>
					<local:ValidatedNumberBox x:Name="NumBoxTime" Header="Duration:"
											  PlaceholderText="[s]" AcceptsExpression="True" CanBeZero="False"
											  HorizontalAlignment="Left"
											  Value="{x:Bind ViewModel.Time, Mode=TwoWay}"
											  ValueChanged="NumBox_ValueChanged"/>

					<!--Calculation settings & run-->
					<Grid Margin="0,5">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="44"/>
							<ColumnDefinition Width="Auto"/>
						</Grid.ColumnDefinitions>

						<Button Background="{StaticResource SystemAccentColor}" Margin="0,5,5,0" CornerRadius="0,4,4,0" Grid.Column="1"
								Click="RunCalc" Height="33">
							<StackPanel Orientation="Horizontal">
								<SymbolIcon Symbol="Play" Margin="0,0,5,0"/>
								<TextBlock Text="Run calculation"/>
							</StackPanel>
						</Button>

						<local:OutputOptionsButton x:Name="ButtonSelectOutputItems" Click="ButtonSelectOutputItems_Click"
												   AllOutputOptions="{x:Bind AllOutputOptions}"/>
					</Grid>
				</StackPanel>

				<!--inputs divider-->
				<Rectangle Fill="{StaticResource ButtonPointerOverBackgroundThemeBrush}"
					   Width="2" Grid.Column="1" HorizontalAlignment="Left">
					<Rectangle.RenderTransform>
						<TranslateTransform X="-1"/>
					</Rectangle.RenderTransform>
				</Rectangle>
				<ctrl:GridSplitter Width="16" Grid.Column="1" HorizontalAlignment="Left" ResizeBehavior="BasedOnAlignment" ResizeDirection="Auto">
					<ctrl:GridSplitter.RenderTransform>
						<TranslateTransform X="-8"/>
					</ctrl:GridSplitter.RenderTransform>
				</ctrl:GridSplitter>

				<!--Reaction inputs panel-->
				<Grid Grid.Column="1" Padding="15,10">
					<Grid.RowDefinitions>
						<RowDefinition Height="Auto"/>
						<RowDefinition/>
					</Grid.RowDefinitions>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="Auto"/>
						<ColumnDefinition/>
					</Grid.ColumnDefinitions>

					<TextBlock Style="{StaticResource SubtitleTextBlockStyle}" Text="Reaction" Margin="0,0,0,5"/>

					<!--Reaction-wide inputs-->
					<StackPanel Orientation="Vertical" Grid.Column="0" Grid.Row="1">
						<TextBlock Text="Rate law:"/>
						<Grid HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,5,5,0">
							<!--
							Initialize : See attached .cs file. Rate laws must be added manually using their RateLawFactories.
							Selection  : Bound to ViewModel.RateLawFactory, notably not a RateLaw directly.
							TextBlock  : Bound to RateLawFactory.Name which contains the human-readable name for the rate law.
							Note : Binding to RateLawFactory removes the need to pass around a specific rate law instance
								   and is more like the *concept* of a rate law.
							-->
							<ComboBox x:Name="DropdownRateLaw" PlaceholderText="Pick a rate law"
									  SelectedValue="{x:Bind ViewModel.RateLawFactory, Mode=TwoWay}"
									  SelectionChanged="Dropdown_SelectionChanged"
									  Grid.Row="1" Grid.ColumnSpan="3" Width="225">
								<ComboBox.ItemTemplate>
									<DataTemplate x:DataType="rl:IRateLawFactory">
										<TextBlock Text="{x:Bind Name}"/>
									</DataTemplate>
								</ComboBox.ItemTemplate>
							</ComboBox>
							<muxc:InfoBadge x:Name="InfoBadgeDropdownRateLaw" Style="{StaticResource ControlErrorInfoBadgeStyle}"
											Visibility="Collapsed"/>
						</Grid>

						<local:ValidatedNumberBox x:Name="NumBoxFrequencyFactor" Header="Frequency factor:"
												  PlaceholderText="[1]" AcceptsExpression="True" CanBeZero="True"
												  HorizontalAlignment="Left" Margin="0,5,0,0"
												  Value="{x:Bind ViewModel.FrequencyFactor, Mode=TwoWay}"
												  ValueChanged="NumBox_ValueChanged"/>
						<local:ValidatedNumberBox x:Name="NumBoxActivationEnergy" Header="Activation energy:"
												  PlaceholderText="[J/mol]" AcceptsExpression="True" CanBeZero="True"
												  HorizontalAlignment="Left" Margin="0,5,0,0"
												  Value="{x:Bind ViewModel.ActivationEnergy, Mode=TwoWay}"
												  ValueChanged="NumBox_ValueChanged"/>
					</StackPanel>

					<!--Species inputs-->
					<StackPanel Grid.Column="1" Grid.Row="1" Margin="20,0">
						<Grid HorizontalAlignment="Left">
							<!--
							Click : Runs ButtonAddSpecies_Click, which initializes a ControlRxnSpeciesViewModel and adds it to the ViewModel.
							-->
							<Button x:Name="ButtonAddSpecies" Click="ButtonAddSpecies_Click"
									Grid.Row="1" Grid.Column="0" Width="150"
									HorizontalAlignment="Left" VerticalAlignment="Top">
								<StackPanel Orientation="Horizontal">
									<SymbolIcon Symbol="Add" Margin="0,0,5,0"/>
									<TextBlock Text="Add species"/>
								</StackPanel>
							</Button>
							<muxc:InfoBadge x:Name="InfoBadgeAddSpecies" Style="{ThemeResource ControlWarningInfoBadgeStyle}"/>
						</Grid>

						<ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" MaxHeight="355"
										HorizontalAlignment="Left" Padding="0,10,5,10">
							<StackPanel Visibility="Visible" HorizontalAlignment="Left">
								<TextBlock x:Name="TextNoRxnSpecies" Text="You haven't defined any species for this reaction."
										   Style="{StaticResource WarningCaptionTextBlockStyle}"/>
								<ListView x:Name="ListViewRxnSpecies"
										  HorizontalAlignment="Stretch" SelectionMode="None" ItemsSource="{x:Bind ViewModel.Items}"
										  MaxHeight="300" Margin="0,0,0,0">
									<!--
									Initialize : Bound to ViewModel (type ControlRxnViewModel) which stores a list of ControlRxnSpeciesViewModels.
									Selection  : Bound to the ViewModel.
									-->
									<ListView.ItemTemplate>
										<DataTemplate x:DataType="vm:ControlRxnSpeciesViewModel">
											<local:ControlRxnSpecies ViewModel="{x:Bind Mode=TwoWay}"
																	 IsConcentrationRequired="{x:Bind IsConcentrationRequired, Mode=TwoWay}"
																	 Grid.Row="1" Margin="0,5"/>
										</DataTemplate>
									</ListView.ItemTemplate>
									<ListView.ItemContainerTransitions>
										<TransitionCollection>
											<AddDeleteThemeTransition/>
										</TransitionCollection>
									</ListView.ItemContainerTransitions>
								</ListView>

							</StackPanel>
						</ScrollViewer>
					</StackPanel>
				</Grid>
			</Grid>

			<!--page divider-->
			<Rectangle Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource MajorHorizontalRectangleStyle}"/>
			<ctrl:GridSplitter Grid.Row="1"	Style="{StaticResource MajorHorizontalSplitterStyle}"/>

			<!--Outputs panel-->
			<Grid Grid.Row="2">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="375" MinWidth="375"/>
					<ColumnDefinition Width="*" MinWidth="500"/>
				</Grid.ColumnDefinitions>

				<!--Numeric outputs panel-->
				<StackPanel Grid.Column="0" Padding="10">
					<TextBlock Style="{StaticResource SubtitleTextBlockStyle}" Text="Output" Margin="0,0,0,5"/>
					<TextBlock x:Name="TextNoOutputDataLabel" Text="There is no numeric output data to display here.&#x0a;Select one for output and run the calculation to add one."
							   Visibility="Visible" Foreground="LightGray" Style="{StaticResource CaptionTextBlockStyle}"/>
					<TextBlock x:Name="DataLabel" IsTextSelectionEnabled="True"/>
				</StackPanel>

				<!--outputs divider-->
				<Rectangle Fill="{StaticResource ButtonPointerOverBackgroundThemeBrush}"
					   Width="2" Grid.Column="1" HorizontalAlignment="Left">
					<Rectangle.RenderTransform>
						<TranslateTransform X="-1"/>
					</Rectangle.RenderTransform>
				</Rectangle>
				<ctrl:GridSplitter Width="16" Grid.Column="1" HorizontalAlignment="Left" ResizeBehavior="BasedOnAlignment" ResizeDirection="Auto">
					<ctrl:GridSplitter.RenderTransform>
						<TranslateTransform X="-8"/>
					</ctrl:GridSplitter.RenderTransform>
				</ctrl:GridSplitter>

				<!--Visual outputs panel-->
				<Grid Grid.Column="1" Margin="15,10">
					<Grid.RowDefinitions>
						<RowDefinition Height="Auto"/>
						<RowDefinition Height="*"/>
					</Grid.RowDefinitions>

					<TextBlock Grid.Row="0" Style="{StaticResource SubtitleTextBlockStyle}" Text="Plots" Margin="0,0,0,5"/>
					<oxy:PlotView x:Name="PlotViewKin" Grid.Row="1" Background="Transparent" Visibility="Visible"/>
					<TextBlock x:Name="TextNoPlots" Grid.Row="1" VerticalAlignment="Top" Style="{StaticResource CaptionTextBlockStyle}"
							   Text="There is no visual output data to display here.&#x0a;Select a plot for output and run the calculation to add one."
							   Visibility="Visible" Foreground="LightGray"/>
				</Grid>
			</Grid>

			<!--Error panel-->
			<StackPanel Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Stretch">
				<muxc:ItemsRepeater ItemsSource="{x:Bind ViewModel.Errors}" ItemTemplate="{StaticResource ErrorInfoBarTemplate}"/>
			</StackPanel>
			
		</Grid>

	</Grid>

</Page>
