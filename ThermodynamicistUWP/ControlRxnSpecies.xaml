<UserControl
	x:Class="ThermodynamicistUWP.ControlRxnSpecies"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="using:ThermodynamicistUWP"
	xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d">

	<Grid Padding="5" BorderThickness="2" BorderBrush="Azure" Margin="5">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition Width="Auto"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="32"/>
			<RowDefinition Height="37"/>
		</Grid.RowDefinitions>
		<ComboBox x:Name="DropdownSpecies" PlaceholderText="Pick a species" SelectionChanged="DropdownEoS_SelectionChanged"
				  Margin="0, 0, 5, 0" Grid.Row="0" Grid.Column="0" Width="200"/>
		<muxc:NumberBox x:Name="NumBoxStoich" PlaceholderText="Stochiometry" ValueChanged="NumBox_ValueChanged" AcceptsExpression="False"
						Value="{x:Bind rxnSpecies.stoich}"
						Margin="0,0,5,0" Grid.Row="0" Grid.Column="1" Width="120"/>
		<ComboBox x:Name="DropdownPhase" PlaceholderText="Phase" SelectionChanged="RefreshCalculations"
				  Margin="0, 0, 5, 0" Grid.Row="0" Grid.Column="2" Width="100"/>
		<RadioButton x:Name="RadioReactant" Content="Reactant" Checked="RadioButton_Checked"
					 Margin="10, 0, 0, 0" Grid.Row="0" Grid.Column="3"/>
		<RadioButton x:Name="RadioProduct" Content="Product" Checked="RadioButton_Checked"
					 Margin="10, 0, 0, 0" Grid.Row="1" Grid.Column="3"/>
		<Button Content="Remove species" Click="ButtonRemoveSpecies_Click"
				Margin="0, 5, 5, 0" Grid.Row="1" Grid.Column="0" Width="135"/>
		<ComboBox x:Name="DropdownEoS" PlaceholderText="Equation of state" SelectionChanged="DropdownEoS_SelectionChanged"
				  Margin="205,5,0,0" Grid.Row="1" Grid.ColumnSpan="3" Width="225"/>
	</Grid>
</UserControl>
