<Window x:Class="Thermodynamicist.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Thermodynamicist"
        mc:Ignorable="d"
        Title="Thermodynamicist | Main Window" Height="200" Width="520">
    <Grid x:Name="MainGrid">
        <GroupBox x:Name="GroupBoxVapor" Header="Vapor phase" Margin="10,36,0,10" HorizontalAlignment="Left"/>
        <GroupBox x:Name="GroupBoxLiquid" Header="Liquid phase" Margin="0,36,10,10" HorizontalAlignment="Right"/>
        <Label x:Name="DataLabel" Content="placeholder" HorizontalAlignment="Stretch" Margin="10,0,10,0" VerticalAlignment="Top"/>
    </Grid>
</Window>